{
  "name": "kataloka-mobile-backend",
  "type": "module",
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "build": "tsc && tsc-alias",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "check": "bun run typecheck && bun run codecheck",
    "check:write": "bun run format && bun run pretty",
    "codecheck": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "format": "eslint src --ext .ts --fix",
    "seed": "bun run src/db/seed/seed.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.13.7",
    "@hono/zod-openapi": "^0.18.3",
    "bcryptjs": "^2.4.3",
    "bun": "^1.1.43",
    "dotenv": "^16.4.7",
    "drizzle-kit": "^0.30.1",
    "drizzle-orm": "^0.38.3",
    "drizzle-zod": "^0.6.1",
    "hono": "^4.6.16",
    "postgres": "^3.4.5",
    "tsc-alias": "^1.8.10",
    "uuid": "^11.0.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@scalar/hono-api-reference": "^0.5.165",
    "@trivago/prettier-plugin-sort-imports": "^5.2.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^6.0.0",
    "prettier": "^3.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.0"
  }
}
